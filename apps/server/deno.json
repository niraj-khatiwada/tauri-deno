{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/refs/heads/main/cli/schemas/config-file.v1.json",
  "name": "server",
  "tasks": {
    "run:base": "deno run --env --allow-read --allow-net --allow-env",
    "dev": "deno task run:base --watch src/index.ts",
    "compile": "deno run --allow-run ./scripts/compile.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "exports": "./src/index.ts",
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "types": ["deno.ns"]
  }
}
